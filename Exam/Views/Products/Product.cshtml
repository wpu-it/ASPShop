@model ShowProductViewModel

@{ 
    ViewData["Title"] = Model.Product.Name;
}

<h4>@Model.Product.Name</h4>
<div class="flex-around">
    <div id="carouselExampleControls" class="carousel slide prod-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Product.ProductPhotos.Count; i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img src="@Model.Product.ProductPhotos[i].Path" class="d-block w-100" alt="...">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@Model.Product.ProductPhotos[i].Path" class="d-block w-100" alt="...">
                    </div>
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" style="opacity: 0.1;" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden" style="font-weight: bold; color: black;"><</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" style="opacity: 0.1;" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden" style="font-weight: bold; color: black;">></span>
        </button>
    </div>
    <div style="margin-left: 10px;">
        <a href="/Products/AddToCart?id=@Model.Product.Id" class="btn btn-primary" style="width:200px; height: 50px; align-content:center;">До кошику</a>
        <button class="btn btn-primary btn-add-to-wish-list" data-id="@Model.Product.Id" style="width:200px; height: 50px; align-content:center; margin-top: 10px;">До списку бажань</button>
    </div>
</div>
<h5 style="margin-top: 10px;">Характеристики</h5>
<div class="characteristics">
    @foreach (var charact in Model.Product.Characteristics)
    {
        <div class="characteristic">
            <div class="charact-name">@charact.Name:</div>
            <div class="charact-val">@charact.Value</div>
        </div>
    }
</div>